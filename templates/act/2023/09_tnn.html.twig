{% extends 'bootstrap5.html.twig' %}

{% block title %}
    Akt TN.by - 09-2023
{% endblock %}

{% block stylesheets %}
    <style>
        main {
            background: #bbb;
            padding: 1em;
        }

        .container {
            background: #fff;
            padding: 1em;
            border-radius: 2px;
            box-shadow: .1em .2em .3em rgba(0,0,0,.5);
            max-width: 980px;
        }

        h1 {
            font-size: 24px;
        }

        .logo-circle {
            border-radius: 50%;
            background: #eeee;
            padding: 4px;
            margin-right: 8px;
        }

        .tr-last {
            font-weight: bold;
        }
    </style>
{% endblock %}

